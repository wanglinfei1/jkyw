<section id="main">
    <div class="avatarZone">
        <div class="avatar">
            <img src="img/head-photo.png" width=81>
            <!--<input id="uploaderInput" class="weui-uploader__input" type="file" onclick="return false">-->
        </div>
        <p class="tip"></p>
    </div>
    <div class="infZone">
        <form onsubmit="return false" id="perfectForm">
            <div class="name"><label>姓名</label>
                <p><input type="text" placeholder="请填写真实姓名"  name="name" id="name" readonly="readonly"></p>
            </div>
            <div class="sex">
                <label>性别</label>
                <p>
                    <img src="img/forword.png" class="forward" width="8" height="15">
                    <input type="text" placeholder="请选择性别" name="sex"  id="sex" readonly="readonly">
                </p>
            </div>
            <div class="birthday">
                <label>出生年月</label>
                <p>
                    <img src="img/forword.png" class="forward" width="8" height="15">
                    <input type="text" placeholder="请选择出生年月" name="birthDate" id="birthDate" readonly="readonly">
                </p>
            </div>
            <div class="phone">
                <label>手机号码</label>
                <p>
                    <input type="number" placeholder="请填写手机号码" name="mobile" id="mobile">
                </p>
            </div>
            <button type="submit" id="submit">提交</button>
        </form>
    </div>
</section>

<div class="mask" id="iosMask">
    <div class="conWrapper" >
        <ul id="iosActionsheet">
            <li class="cell">男</li>
            <li class="on cell">女</li>
        </ul>
        <div class="cancel" id="iosActionsheetCancel">取消</div>
    </div>

</div>
<div id="toast" style="display: none;">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-icon-warn weui-icon_toast"></i>
        <p class="weui-toast__content">已完成</p>
    </div>
</div>